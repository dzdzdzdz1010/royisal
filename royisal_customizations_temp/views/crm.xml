<odoo>
    <record id="royisal_temp_crm" model="ir.ui.view">
        <field name="name">royisal.temp.crm.view</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group>
                    <group string="Contact Properties">
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="whatsapp_number"/>
                        <field name="interested_ids" widget="many2many_tags"/>
                        <field name="buying_role"/>
                        <field name="tax_id_number"/>
                        <field name="business_status"/>
                    </group>
                    <group string="Details">
                        <field name="source_online_id" widget="many2many_tags"/>
                        <field name="source_offline_id"/>
                        <field name="campaign_id" string="Registered In?"/>
                        <field name="lead_status"/>
                        <field name="lifecycle_stage"/>
                        <field name="customer_status"/>
                        <field name="create_date"/>
                        <field name="medium_id" string="Action By"/>
                        <field name="last_contacted_date"/>
                    </group>
                </group>
                <group>
                    <group string="Product Order">
                        <field name="product_ids" widget="many2many_tags"/>
                        <field name="product_category_id" widget="many2many_tags"/>
                        <field name="material_id" widget="many2many_tags"/>
                        <field name="stone_type_id" widget="many2many_tags"/>
                        <field name="plating_id" widget="many2many_tags"/>
                        <field name="design_reference" widget="url"/>
                    </group>
                    <group string="Deal Details">
                        <field name="deal_pipeline"/>
                        <field name="deal_amount"/>
                        <field name="user_id" string="Deal Owner"/>
                        <field name="priority" string="Deal Priority"/>
                        <field name="recent_deal_amount"/>
                        <field name="interested_quantity"/>
                    </group>
                </group>
                
            </xpath>
            <!-- <xpath expr="//group[@name='lead_partner']" position="inside">
                <field name="product_type_custom"/>
                <field name="product_category_id" widget="many2many_tags"/>
                <field name="material_id" widget="many2many_tags"/>
                <field name="stone_type_id" widget="many2many_tags"/>
                <field name="plating_id" widget="many2many_tags"/>
            </xpath> -->
        </field>
    </record>
</odoo>